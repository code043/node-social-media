{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "outDir": "./dist/src",
    "rootDir": "./src"
  },
  "ts-node": {
    "esm": true
},
  "include": ["src/**/*.ts", "images/"],
  "exclude": ["node_modules", "__test__"]
}
